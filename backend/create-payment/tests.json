{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "POST without product_ids returns 400",
      "method": "POST",
      "path": "/",
      "body": {
        "customer_email": "test@example.com",
        "return_url": "https://example.com/return"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with invalid product_ids returns 404",
      "method": "POST",
      "path": "/",
      "body": {
        "product_ids": [99999],
        "customer_email": "test@example.com",
        "return_url": "https://example.com/return"
      },
      "expectedStatus": 404,
      "expectedBody": {
        "error": "Products not found"
      },
      "bodyMatcher": "partial"
    }
  ]
}
